{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "lib": ["es2021"],
    "module": "commonjs",
    "target": "es2021",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,
    "declaration": true,

    "types": ["@types/jest"]
  },
  "include": ["src/**/*"],
  "exclude": ["./tests", "./build"]
}
