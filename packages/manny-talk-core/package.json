{
  "name": "@manny-talk/manny-talk",
  "version": "0.2.0",
  "description": "A generic platform that will route commands and conversations from voice or text-based clients to 3rd party backends.",
  "main": "build/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/daangemist/manny-talk.git"
  },
  "engines": {
    "node": ">=16.3"
  },
  "bin": {
    "manny-talk": "bin/manny-talk"
  },
  "types": "build/index.d.ts",
  "keywords": [
    "manny",
    "manny-talk",
    "ai",
    "artifical",
    "intelligence",
    "router",
    "conversation",
    "commands",
    "hub",
    "superplug",
    "chat",
    "chatbot",
    "messaging"
  ],
  "author": "daangemist",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/daangemist/manny-talk/issues"
  },
  "homepage": "https://github.com/daangemist/manny-talk#readme",
  "scripts": {
    "start": "node build/index.js",
    "watch": "tsc-watch --onSuccess \"node build/index.js\"",
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf ./build",
    "lint": "eslint --ext=.ts ./src",
    "lint:fix": "eslint --ext=.ts --fix ./src",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
      "unicorn"
    ],
    "rules": {
      "unicorn/filename-case": "error"
    },
    "ignorePatterns": [
      "*/**/*.js"
    ]
  },
  "devDependencies": {
    "@tsconfig/node14": "^1.0",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@typescript-eslint/eslint-plugin": "^5.2",
    "@typescript-eslint/parser": "^5.2",
    "debug": "^4.3",
    "eslint": "^8.1",
    "eslint-plugin-unicorn": "^42.0",
    "jest": "^27.3",
    "nodemon": "^2.0",
    "prettier": "^2.4",
    "ts-jest": "^27.1.3",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.4"
  },
  "peerDependencies": {
    "express": "^4.17"
  },
  "dependencies": {
    "npm-utils": "^2.0.3",
    "superplug": "^1.0.0",
    "yargs": "^17.3.1"
  }
}
